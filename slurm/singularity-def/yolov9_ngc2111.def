Bootstrap: docker
From: nvcr.io/nvidia/pytorch:21.11-py3

%post
    rm -rf /opt/conda/lib/python3.8/site-packages/cv2/
    apt-get update && apt-get install -y \
        wget \
        git \
        vim \
        build-essential \
        libssl-dev \
        libffi-dev \
        zip \
        htop \
        screen \
        libc6

    python3 -m pip install --upgrade pip
    python3 -m pip install gitpython opencv-python-headless thop seaborn albumentations pillow==6.2.2
    apt-get clean
    rm -rf /var/lib/apt/lists/*

%environment
    export PATH=/usr/local/cuda/bin:$PATH
    export LD_LIBRARY_PATH=/usr/local/cuda/lib64:$LD_LIBRARY_PATH
    export PYTHONPATH=/opt/conda/lib/python3.8/site-packages:$PYTHONPATH

%labels
    Maintainer "wychen <wychen@narlabs.org.tw>"
    Version "1.0"

%runscript
    echo "This container provides PyTorch with CUDA 11.5 and NVIDIA NeMo support"
    exec "$@"
